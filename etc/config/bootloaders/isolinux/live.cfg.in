prompt 0

MENU HIDDEN
MENU AUTOBOOT Booting herbstluft remix live disk in # seconds
timeout 50

label live-@FLAVOUR@
	menu label ^Try or install herbstluft remix
	menu default
	linux /casper/vmlinuz
	initrd /casper/initrd.lz
	append @APPEND_LIVE@

label check
	menu label ^Check disk for defects
	linux /casper/vmlinuz
	append boot=casper integrity-check initrd=/casper/initrd.lz quiet --

label hd
	menu label ^Boot from first hard disk
	localboot 0x80
